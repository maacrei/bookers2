<p class="notice text-success"><%= flash[:notice] %></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <!--↓部分テンプレート-->
     <%= render 'list', books: @books %>
     
     <h2 class="mt-3">New book</h2>
     <%= form_with model: @new_book, local: true do |f| %>
      <div class="field">
       <%= f.label :title %><br>
       <%= f.text_field :title %>
      </div>
      
      <div class="field mt-3">
       <%= f.label :opinion %><br>
       <%= f.text_area :body %>
      </div>
      
      <div class="field mt-2">
       <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
     <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
     <table class="table">
      <tbody>
        <tr>
          <td><%= link_to user_path(@book.user.id) do %> 
               <%= image_tag @book.user.get_profile_image(100,100) %><br><%= @book.user.name %>
              <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>          
           <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %></td>
           <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-danger","data-confirm" => "Are you sure?" %></td>
          <% end %>
        </tr>
      </tbody>
     </table>
    </div>
  </div>
</div>

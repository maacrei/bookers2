<p class="notice text-success"><%= flash[:notice] %></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <!--↓部分テンプレート-->
     <%= render 'list', books: @books, new_book: @new_book, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
     <table class="table">
      <tbody>
        <tr>
          <td><%= link_to user_path(@book.user.id) do %>
               <%= image_tag @book.user.get_profile_image(100,100) %><br><%= @book.user.name %>
              <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
           <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %></td>
           <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-danger","data-confirm" => "Are you sure?" %></td>
          <% end %>
        </tr>
      </tbody>
     </table>
    </div>
  </div>
</div>

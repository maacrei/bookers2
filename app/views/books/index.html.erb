<h1>Books#index</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-4">

    
<h2>User info</h2>

<h2>New book</h2>
<%= form_with model: @book, local: true do |f| %>
 <div class="field">
   <%= f.label :title %>
   <%= f.text_field :title %>
 </div>
 <div class="field">
   <%= f.label :body %>
   <%= f.text_area :body %>
 </div>
 <div class="field">
   <%= f.submit 'Create Book' %>
 </div>
<% end %>
    </div>

    <div class="col-lg-8">
<h2>Books</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= 'Edit' %></td>
     <td><%= 'Destroy' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  </div>
 </div>
</div>

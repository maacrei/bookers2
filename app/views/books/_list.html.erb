<h2>User info</h2>
<div>
   <%= image_tag @user.get_profile_image(100,100) %>
   <table class="table">
      <tbody>
       <tr>
        <th>name</th>
        <th><%= @user.name %></th>
       </tr>
       <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
       </tr>
     </tbody>
   </table>
   <%= link_to edit_user_path(@user.id) do %>
     <i class="btn btn-outline-secondary btn-block fa-solid fa-user-gear"></i>
   <% end %>
</div>
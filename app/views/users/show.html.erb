<p class="notice text-success"><%= flash[:notice] %></p>

<div class="container">
  <div class="row">
    <div class="col-lg-3">
     <!--部分テンプレート-->
     <%= render 'books/list', books: @books %>

     <h2>New book</h2>
     <%= form_with model: @book, local: true do |f| %>
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :opinion %>
        <%= f.text_area :body %>
      </div>
      <div class="field">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
     <% end %>
    </div>
    
    <div class="col-lg-8 offset-md-1">
     <h2>Books</h2>
     <!--ユーザーが投稿したBookの一覧を作成-->
     <table class="table">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(book.user.id) do %>
                 <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
     </table>
    </div>
   </div>
 </div>

<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    
   <h1>User info</h1>
   <div id="error_explanation" class="text-danger">
 ã€€  <% if @user.errors.any? %>
     <%= @user.errors.count %> error prohibited this obj from being saved:
     <ul>
      <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    <% end %>
   </div>
      
   <%= form_with model: @user do |f| %>
     <div class="form-group">
       <label for="inputTitle">Name</label><br>
       <%= f.text_field :name %>
     </div>
  
     <div class="form-group">
       <label for="inputImage">Image</label><br>
       <%= f.file_field :profile_image %>
     </div>
  
     <div class="form-group">
      <label for="inputBody">Introduction</label><br>
      <%= f.text_area :introduction %>
     </div>

     <div class="form-group">
      <%= f.submit "Update User", class: "btn btn-secondary" %>
     </div>
   <% end %>
  </div>
 </div>
</div>
